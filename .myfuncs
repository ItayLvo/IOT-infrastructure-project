#
# gcc compilation aliases: c89, c99, debug mode, release mode

alias gd='gcc -ansi -pedantic-errors -Wall -Wextra -ggdb'
alias gc='gcc -ansi -pedantic-errors -Wall -Wextra -DNDEBUG -03'
alias gd9='gcc -std=c99 -pedantic-errors -Wall -Wextra -ggdb'
alias gc9='gcc -std=c99 -pedantic-errors -Wall -Wextra -DNDEBUG -03'
#
# Valgrind alias
alias vlg='valgrind --leak-check=yes --track-origins=yes'

